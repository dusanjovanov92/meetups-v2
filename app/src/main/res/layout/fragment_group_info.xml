<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txt_meetings_in_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_group_info_meetings_progress"/>

        <TextView
            android:id="@+id/txt_next_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_group_info_next_meeting"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/txt_next_meeting_label"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projekat 365"/>

        <TextView
            android:id="@+id/txt_next_meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Za 45 minuta"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_info"
        android:paddingLeft="@dimen/list_padding_side"
        android:paddingRight="@dimen/list_padding_side"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_schedule_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"
        android:src="@drawable/ic_alarm_add_black_24dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"/>

</RelativeLayout>